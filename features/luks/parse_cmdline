		--luks|--no-luks)
			CMD_LUKS=$(parse_optbool "$*")
			print_info 3 "CMD_LUKS: ${CMD_LUKS}"
			;;
		--gpg|--no-gpg)
			CMD_GPG=$(parse_optbool "$*")
			print_info 3 "CMD_GPG: ${CMD_GPG}"
			;;
		--keyctl|--no-keyctl)
			CMD_KEYCTL=$(parse_optbool "$*")
			print_info 3 "CMD_KEYCTL: ${CMD_KEYCTL}"
			;;
